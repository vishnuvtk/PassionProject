@{
    ViewData["Title"] = "Home Page";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">GoodWatch</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Users" asp-action="Index">Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Watches" asp-action="Index">Watches</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Reservations" asp-action="Index">Reservations</a>
            </li>
        </ul>
    </div>
</nav>

<div class="jumbotron">
    <h1 class="display-4">Welcome to GoodWatch!</h1>
    <p class="lead">GoodWatch is an online platform that has collection of luxury timepieces. It operates with a database system that includes Users, Watches, and Reservations.</p>
    <hr class="my-4">
    <p>You can view, create, edit, and delete users, watches, and reservations in this application.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Manage Users</h2>
        <p>Manage user information such as name, email, and address.</p>
        <a class="btn btn-primary" asp-controller="Users" asp-action="Index">Go to Users</a>
    </div>
    <div class="col-md-4">
        <h2>Manage Watches</h2>
        <p>View and manage watch information such as name, price, and description.</p>
        <a class="btn btn-secondary" asp-controller="Watches" asp-action="Index">Go to Watches</a>
    </div>
    <div class="col-md-4">
        <h2>Manage Reservations</h2>
        <p>Create and manage reservations for users and watches.</p>
        <a class="btn btn-info" asp-controller="Reservations" asp-action="Index">Go to Reservations</a>
    </div>
</div>
